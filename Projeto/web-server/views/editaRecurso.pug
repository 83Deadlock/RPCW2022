                input.w3-btn.w3-margin-top.w3-margin-bottom.w3-hover-black.w3-round-xxlarge(type='submit' value='Enviar')

    if recurso.type == 'Slide'
        .w3-container.w3-pale-green
            form.w3-container(action='/editar/completo?filename=' + recurso.filename + "&tipo=" + recurso.type , method='POST')
                input(type='radio' name='tipo' value='Ficha')
                |  Ficha
                br
                input(type='radio' name='tipo' value='Exame')
                |  Exame
                br
                input(type='radio' name='tipo' value='Tese')
                |  Tese
                br
                input.w3-btn.w3-margin-top.w3-margin-bottom.w3-hover-black.w3-round-xxlarge(type='submit' value='Enviar')

